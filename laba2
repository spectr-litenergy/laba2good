import java.util.Scanner;

public class Main {

    public static void main(String[] args) { // создается объект scanner для считывания данных с консоли
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите x: "); // запрашивает х
        double x = scanner.nextDouble(); // Считывает введенное значение x как дробное число
        System.out.print("Введите количество членов ряда: ");
        int n = scanner.nextInt(); // считывает значение n
        double sum = 0; //инициализирует переменную sum для хранения суммы ряда
        // Цикл for, который вычисляет n членов ряда  для приближенного вычисления e^x.
        for (int i = 0; i < n; i++) { // начинает цикл который выполняется n раз
            // Вычисляем факториал для текущего n.
            double factorial = 1;// Инициализирует переменную для хранения факториала
            for (int j = 1; j <= i; j++) { // для каждого i вычисляется факториал числа i с помощью вложенного цикла
                factorial *= j;// Умножает текущий факториал на j, начиная с 1 и до i
            }
            if (factorial == 0) factorial = 1; // Обработка случая n=0, если фактор=0 устанав 1, когда i=0
            // Вычисляем текущий член ряда и добавляем его к сумме.
            sum += Math.pow(-1, i) * Math.pow(x, i) / factorial; //  Вычисляет текущий член ряда и добавляет его к сумме
        }
        System.out.println("e^" + x + " = " + sum); // выводится приближенное значение e^х
    }
}
